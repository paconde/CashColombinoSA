<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="botonesBarraInferior">
        <item name="android:layout_width">@dimen/largo</item>
        <item name="android:layout_height">@dimen/largo</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginLeft">@dimen/margenLeft</item>
        <item name="android:background">@color/alfaCero</item>
    </style>

    <style name="botonesMenuCentral">
        <item name="android:layout_width">@dimen/extralargo</item>
        <item name="android:layout_height">@dimen/extralargo</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/alfaCero</item>
        <item name="android:layout_marginTop">@dimen/margenTop</item>
        <item name="android:layout_marginLeft">@dimen/margenLeft2</item>
    </style>

    <style name="botonesMenuCentralExtraLargo">
        <item name="android:layout_width">@dimen/extralargo</item>
        <item name="android:layout_height">@dimen/extralargo2</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/alfaCero</item>
        <item name="android:layout_marginTop">@dimen/margenTop</item>
        <item name="android:layout_marginLeft">@dimen/margenLeft</item>
    </style>
</resources>
