<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="botonesBarraInferior">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/dim8dp</item>
        <item name="android:layout_width">@dimen/dim0dp</item>
        <item name="android:layout_height">@dimen/dim80dp</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="botonesMenuCentral">
        <item name="android:layout_width">@dimen/dim0dp</item>
        <item name="android:layout_height">@dimen/dim100dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">@dimen/margenTop</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="botonesMenuCentralLand">
        <item name="android:layout_width">@dimen/dim100dp</item>
        <item name="android:layout_height">@dimen/dim100dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">@dimen/margenTop</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="botonesMenuCentralExtraLargo">
        <item name="android:layout_width">@dimen/extralargo</item>
        <item name="android:layout_height">@dimen/extralargo2</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">@dimen/margenTop</item>
        <item name="android:layout_marginLeft">@dimen/margenLeft</item>
    </style>
</resources>
