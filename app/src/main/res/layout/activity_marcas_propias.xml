<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/tb_main"
        layout="@layout/tool_bar_main"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margenLeft"
            android:layout_marginRight="@dimen/margenLeft"
            android:layout_marginTop="@dimen/min_med"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_med"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/marcas_propias_intro"
                    android:textSize="@dimen/texto20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/micro"
                    android:background="@color/colorPrimary"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_med"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagenMarcaManuelBarea"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/extralargo2"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:contentDescription="@string/marcaMB"
                    android:scaleType="fitCenter"
                    android:src="@drawable/manuel_barea" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/marca_manuel_barea"
                    android:textSize="@dimen/texto20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/micro"
                    android:background="@color/colorPrimary"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_med"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/marca_olibarea"
                    android:textSize="@dimen/texto20sp" />

                <ImageView
                    android:id="@+id/imagenMarcaOlibarea"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/extralargo2"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:contentDescription="@string/marcaOLIB"
                    android:scaleType="fitCenter"
                    android:src="@drawable/olibarea" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/micro"
                    android:background="@color/colorPrimary"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_med"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagenMarcaCumbreIberica"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/extralargo2"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:contentDescription="@string/marcaCI"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cumbre_iberica" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/marca_cumbre_iberica"
                    android:textSize="@dimen/texto20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/micro"
                    android:background="@color/colorPrimary"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_med"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/marca_consemur"
                    android:textSize="@dimen/texto20sp" />

                <ImageView
                    android:id="@+id/imagenMarcaConsemur"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/extralargo2"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:contentDescription="@string/marcaCON"
                    android:scaleType="fitCenter"
                    android:src="@drawable/consemur" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/micro"
                    android:background="@color/colorPrimary"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_med"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagenMarcaBaresol"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/extralargo2"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:contentDescription="@string/marcaBAR"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baresol" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/marca_baresol"
                    android:textSize="@dimen/texto20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/micro"
                    android:background="@color/colorPrimary"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/min_med"
                android:layout_marginTop="@dimen/min_med"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/marca_simon_verde"
                    android:textSize="@dimen/texto20sp" />

                <ImageView
                    android:id="@+id/imagenMarcaSimonVerde"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/extralargo2"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:contentDescription="@string/marcaSV"
                    android:scaleType="fitCenter"
                    android:src="@drawable/simon_verde" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/micro"
                    android:background="@color/colorPrimary"
                    android:contentDescription=""
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_med">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/marcas_propias"
                    android:textSize="@dimen/texto20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imagen_descarga_marcas_propias"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/largo"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/medio"
                    android:layout_marginTop="@dimen/min_med"
                    android:contentDescription="@string/botonMP"
                    android:scaleType="fitCenter"
                    android:src="@drawable/boton_marcas_propias" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/min_med"
        android:layout_weight="0">

    <fragment
        android:id="@+id/fragment"
        android:name="com.fconde.cashcolombinoapp.models.frg_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/lay_frg_bottom_bar" />

    </LinearLayout>

</LinearLayout>
