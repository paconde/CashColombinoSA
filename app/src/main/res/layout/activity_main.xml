<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.fconde.cashcolombinoapp.MainActivity">

    <include
        android:id="@+id/tb_main"
        layout="@layout/tool_bar_main"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnNosotros"
                style="@style/botonesMenuCentral"
                android:layout_marginLeft="@dimen/margenLeft"
                android:layout_marginStart="@dimen/margenLeft"

                android:background="@android:color/transparent"
                android:contentDescription="@string/act_name_nosotros"
                android:src="@drawable/nosotros" />

            <ImageButton
                android:id="@+id/imgBtnCatalogo"
                style="@style/botonesMenuCentral"
                android:background="@android:color/transparent"
                android:contentDescription="@string/act_name_catalogo"
                android:src="@drawable/catalogo" />

            <ImageButton
                android:id="@+id/imgBtnMarcasPropias"
                style="@style/botonesMenuCentral"
                android:background="@android:color/transparent"
                android:contentDescription="@string/act_name_marcas_propias"
                android:src="@drawable/marcas_propias" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnLocalizador"
                style="@style/botonesMenuCentralExtraLargo"
                android:background="@android:color/transparent"
                android:contentDescription="@string/act_name_localizador"
                android:src="@drawable/localizador_productos" />

            <ImageButton
                android:id="@+id/imgBtnRecetas"
                style="@style/botonesMenuCentral"
                android:background="@android:color/transparent"
                android:contentDescription="@string/act_name_recetas"
                android:src="@drawable/recetas" />

            <ImageButton
                android:id="@+id/imgBtnPedidos"
                style="@style/botonesMenuCentral"
                android:background="@android:color/transparent"
                android:contentDescription="@string/act_name_pedidos"
                android:src="@drawable/pedido" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/min_med"
        android:layout_weight="0">

        <fragment
            android:id="@+id/fragment"
            android:name="com.fconde.cashcolombinoapp.frg_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            tools:layout="@layout/lay_frg_bottom_bar" />

    </LinearLayout>

</LinearLayout>

