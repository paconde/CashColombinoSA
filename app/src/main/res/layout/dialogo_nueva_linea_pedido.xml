<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <EditText
        android:id="@+id/editTextCodigoArticulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Código Artículo"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextDescripcionArticulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Descripción Artículo"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextCantidadArticulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Cantidad Artículo"
        android:inputType="number" />

</LinearLayout>